<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Qoutes.MainPage">

    <FlexLayout JustifyContent="SpaceBetween" Direction="Column">
        <FlexLayout.Background>
            <LinearGradientBrush EndPoint="1,0">
                <GradientStop x:Name="color1" Color="Red"
                          Offset="0.1" />
                <GradientStop x:Name="color2" Color="Blue"
                          Offset="1.0" />
            </LinearGradientBrush>
        </FlexLayout.Background>
        <Label Text=""/>
        <Label
            Padding="10"
            HorizontalTextAlignment="Center" 
               TextColor="#fff"
               FontSize="25"
               FontAttributes="Bold"
               x:Name="lblQuote"
               Text="Remember no one can make you feel inferior without your consent."/>
        <Button Text="Get New Quote" CornerRadius="0"
                TextColor="#fff" 
                FontAttributes="Bold" 
                BackgroundColor="#000" 
                Opacity="0.4" 
                Padding="10"
                FontSize="20"
                Margin="15"
                x:Name="btnGenerate"
                Clicked="btnGenerate_Clicked"/>
    </FlexLayout>

</ContentPage>
